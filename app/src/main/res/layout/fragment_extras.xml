<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BB8FCE"
    tools:context=".Fragments.ExtrasFragment">

    <Button
        android:id="@+id/btnFragmentCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="Cerrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="EXTRAS"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFragmentCerrar"/>



        <LinearLayout
            android:id="@+id/linea1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/titulo">

            <TextView
                android:id="@+id/tregistro"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="1dp"
                android:enabled="true"
                android:fadeScrollbars="false"
                android:text="Id"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/edRegistro"
                style="@style/EditTextStyle"
                android:enabled="false"

                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linea1"
            >

            <TextView
                android:id="@+id/tagua"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="1dp"
                android:text="Agua" />

            <EditText
                android:id="@+id/edagua"
                style="@style/EditTextStyle" />

            <TextView
                android:id="@+id/tpapelh"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="Papel H." />

            <EditText
                android:id="@+id/edpapleh"
                style="@style/EditTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linea2">

            <TextView
                android:id="@+id/tcafen"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="1dp"
                android:text="Cafe C." />

            <EditText
                android:id="@+id/edcafen"
                style="@style/EditTextStyle" />

            <TextView
                android:id="@+id/tcafec"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="Cafe C." />

            <EditText
                android:id="@+id/edcafec"
                style="@style/EditTextStyle"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linea3">

            <TextView
                android:id="@+id/tleche"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="1dp"
                android:text="Leche" />

            <EditText
                android:id="@+id/idleche"
                style="@style/EditTextStyle"

                />

            <TextView
                android:id="@+id/ttem"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="Te Manz." />

            <EditText
                android:id="@+id/edtem"
                style="@style/EditTextStyle"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linea4">

            <TextView
                android:id="@+id/ttenegro"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="1dp"
                android:text="Te Negro" />

            <EditText
                android:id="@+id/edtenegro"
                style="@style/EditTextStyle"

                />

            <TextView
                android:id="@+id/tgalletas"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="Galletas" />

            <EditText
                android:id="@+id/edgalletas"
                style="@style/EditTextStyle"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linea5">

            <TextView
                android:id="@+id/tzucar"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="1dp"
                android:text="Azucar" />

            <EditText
                android:id="@+id/edzucar"
                style="@style/EditTextStyle"

                />

            <TextView
                android:id="@+id/tsacarinas"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="Sacarinas" />

            <EditText
                android:id="@+id/edsacarinas"
                style="@style/EditTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linea6">

            <TextView
                android:id="@+id/tmaquillaje"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="1dp"
                android:text="Maquillaje" />

            <EditText
                android:id="@+id/edmaquillaje"
                style="@style/EditTextStyle"

                />

            <TextView
                android:id="@+id/tdulceextra"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="Dulce E." />

            <EditText
                android:id="@+id/eddulceextra"
                style="@style/EditTextStyle"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linea7">

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:text="Guardar" />

            <!-- Botón Modificar -->
            <Button
                android:id="@+id/btnModificar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:text="Modificar" />

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
