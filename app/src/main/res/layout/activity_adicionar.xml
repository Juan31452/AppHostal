<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#225924"
    tools:context=".AdicionarActivity">

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Adicionar"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenu" />

    <EditText
        android:id="@+id/editTextFecha"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/edit_text"
        android:focusable="false"
        android:hint="Fecha"
        android:onClick="mostrarCalendario"
        android:textColor="#010000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <EditText
        android:id="@+id/edhabitacion"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/edit_text"
        android:hint="Habitacion"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFecha" />

    <EditText
        android:id="@+id/edestado"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/edit_text"
        android:hint="Estado"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edhabitacion"

        />

    <EditText
        android:id="@+id/edbajeras"
        style="@style/EditTextStyle"
        android:hint="Bajeras"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edestado" />

    <EditText
        android:id="@+id/edencimeras"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Encimeras"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edbajeras" />

    <EditText
        android:id="@+id/edfundalomohada"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Funda Almohada"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edencimeras" />

    <EditText
        android:id="@+id/edprotectora"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Protector Almohada"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edfundalomohada" />

    <EditText
        android:id="@+id/ednordica"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Nordica"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edprotectora" />

    <EditText
        android:id="@+id/edtoallaD"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Toalla Ducha"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ednordica" />

    <EditText
        android:id="@+id/edtoallaL"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Toalla Lavabo"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtoallaD" />

    <EditText
        android:id="@+id/edalfombrim"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Alfombrim"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtoallaL" />

    <EditText
        android:id="@+id/paid"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Paid"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edalfombrim" />

    <EditText
        android:id="@+id/protectC"
        style="@style/EditTextStyle"
        android:layout_height="wrap_content"
        android:hint="Protector Colchon"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paid" />

    <Button
        android:id="@+id/btnEnviarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/protectC" />
</androidx.constraintlayout.widget.ConstraintLayout>