<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textColorHint">#000000</item>


    </style>

    <style name="EditTextStyleFecha" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TextDetallesStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textColor">#010000</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="TextResultadoStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:textColor">#010000</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="ListViewTextStyle">
        <item name="android:textColor">#000000</item> <!-- Color negro -->
        <item name="android:padding">16dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">

            <item name="android:windowMinWidthMajor">70%</item> <!-- Ancho del diálogo -->
            <item name="android:windowMinWidthMinor">50%</item> <!-- Ancho mínimo del diálogo -->

        <!-- Otros atributos -->
    </style>



</resources>